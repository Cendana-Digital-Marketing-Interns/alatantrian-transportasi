---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Tentang Kami"
    image={{
      src: '~/assets/images/mitratransportasi.jpg',
      alt: 'Terminal Transportasi Modern',
    }}
  >
    <Fragment slot="title">
      Mitra Terpercaya Digitalisasi <br />
      <span class="text-accent dark:text-white"> Transportasi & Logistik Indonesia</span>
    </Fragment>

    <Fragment slot="subtitle">
      Kami berdedikasi untuk membantu Terminal, Travel, dan Perusahaan Logistik dalam mengurai antrian dan meningkatkan
      kepuasan penumpang melalui teknologi yang handal dan mudah digunakan.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Pencapaian Kami"
    stats={[
      { title: 'Tahun Pengalaman', amount: '10+' },
      { title: 'Klien Terminal & Travel', amount: '150+' },
      { title: 'Kota Jangkauan', amount: '34' },
      { title: 'Teknisi Berkualitas', amount: '10+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Nilai Utama Kami"
    subtitle="Prinsip yang kami pegang teguh dalam melayani setiap perusahaan transportasi dan logistik."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Inovasi Berkelanjutan',
        description:
          'Kami terus mengembangkan software antrian agar selalu kompatibel dengan sistem booking online terbaru dan regulasi transportasi.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Kualitas Hardware',
        description:
          'Menggunakan standar industri (Industrial Grade) untuk memastikan mesin kiosk tahan beroperasi 24 jam non-stop.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Layanan Responsif',
        description:
          'Dukungan teknis yang cepat tanggap adalah prioritas kami, karena kami paham pelayanan penumpang tidak boleh terhenti.',
        icon: 'tabler:headset',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Terminal Bus',
        description:
          'Sistem antrian terintegrasi untuk terminal bus AKAP dan AKDP dengan dukungan check-in mandiri dan display jadwal real-time.',
        icon: 'tabler:template',
      },
      {
        title: 'Agen Travel',
        description:
          'Solusi antrian praktis untuk travel dan shuttle service dengan integrasi booking online dan validasi tiket otomatis.',
        icon: 'tabler:template',
      },
      {
        title: 'Stasiun Kereta',
        description:
          'Manajemen antrian modern untuk loket tiket dan boarding gate dengan informasi jadwal keberangkatan terintegrasi.',
        icon: 'tabler:template',
      },
      {
        title: 'Cargo & Logistik',
        description:
          'Sistem antrian efisien untuk layanan pengiriman barang dengan tracking status dan notifikasi real-time untuk pelanggan.',
        icon: 'tabler:template',
      },
      {
        title: 'Bandara Kecil',
        description:
          'Kiosk check-in mandiri dan sistem boarding terintegrasi untuk bandara regional dengan volume penumpang menengah.',
        icon: 'tabler:template',
      },
      {
        title: 'Rental Kendaraan',
        description:
          'Manajemen antrian digital untuk layanan rental mobil dan motor dengan sistem reservasi dan dokumentasi terintegrasi.',
        icon: 'tabler:template',
      },
    ]}
    image={{
      src: '~/assets/images/nilaiutama.jpg',
      alt: 'Colorful Image',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Sejarah Perjalanan"
    subtitle="Dari sebuah startup kecil hingga menjadi vendor kepercayaan ratusan Terminal dan Perusahaan Transportasi."
    items={[
      {
        title: '2015: Awal Mula',
        description:
          'Berdiri sebagai penyedia hardware komputer umum, dan mulai meriset kebutuhan sistem antrian untuk industri transportasi.',
      },
      {
        title: '2018: Fokus Transportasi',
        description: 'Meluncurkan Software Antrian V1 khusus untuk Terminal Bus dengan fitur integrasi booking dasar.',
      },
      {
        title: '2021: Era Digital Transportasi',
        description:
          'Mengembangkan sistem yang terintegrasi penuh dengan platform booking online dan manifest penumpang untuk mendukung transformasi digital transportasi.',
      },
      {
        title: '2025: Ekspansi Nasional',
        description:
          'Memiliki jaringan teknisi di berbagai kota besar di Indonesia untuk layanan purna jual yang lebih baik.',
      },
    ]}
  />

  <Features2
    title="Kantor Layanan"
    tagline="Temukan Kami"
    columns={3}
    items={[
      {
        title: 'Jakarta (Pusat)',
        description: 'Jl. Jendral Sudirman No. Kav 52, Jakarta Selatan',
      },
      {
        title: 'Surabaya',
        description: 'Jl. Raya Darmo No. 12, Surabaya',
      },
      {
        title: 'Semarang',
        description: 'Jl. Pemuda No. 150, Semarang',
      },
    ]}
  />
</Layout>